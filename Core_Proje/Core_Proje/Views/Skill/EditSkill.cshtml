@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/AdminLayout2.cshtml";
}

 <div class="card-header border-0">
              <h3 class="mb-0">Yetenek Güncelleme</h3>
 </div>     
 
 @using(Html.BeginForm("EditSkill","Skill",FormMethod.Post))
 {
     @Html.HiddenFor(x=>x.SkillID)
    <br /> <br /> 
   @Html.Label("Yetenek Adı ")<br />  <br />
   @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    <br />
   
    @Html.Label("Yetenek Değeri ")<br />  <br />
   @Html.TextBoxFor(x=>x.Value,new{@class="form-control"})
    <br />
    <button class="btn btn-primary">Güncelle</button>
  
 }