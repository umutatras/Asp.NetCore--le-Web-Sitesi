@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@{ 
    string color = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>İçerik</th>
                            <th>Tür</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if(item.Status=="Yeni Yazı")
                            {
                                color = "badge badge-danger";
                            }
                            else if(item.Status=="Yeni Video")
                            {
                                color = "badge badge-warning";
                            }
                            else if (item.Status == "Yeni Yayın")
                            {
                                color = "badge badge-primary";
                            }
                            else if (item.Status == "Mezuniyet")
                            {
                                color = "badge badge-success";
                            }
                        <tr>
                            <th>@item.AnnouncementID</th>
                            <td>@item.Title</td>
                            <td>@Convert.ToDateTime(@item.Date).ToShortDateString()</td>
                            <td>@item.Content</td>
                            <td><label class="@color">@item.Status</label></td>
                        </tr>}
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
