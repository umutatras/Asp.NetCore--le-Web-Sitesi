@model Core_Proje.Areas.Writer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Kayıt ol</title>
    <link rel="stylesheet" href="/skydas/vendors/feather/feather.css">
    <link rel="stylesheet" href="/skydas/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/skydas/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/skydas/css/vertical-layout-light/style.css">  
    <link rel="shortcut icon" href="/skydas/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="/skydas/images/logo.svg" alt="logo">
                            </div>
                            <h4>Hesap oluştur</h4>
                            <h6 class="font-weight-light">Kayıt olmak çok basit</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <span asp-validation-for="SurName" class="text-danger"></span>
                                    <input type="text" asp-for="SurName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adınız</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" asp-for="UserName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Mail</label>
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                    <input type="text" asp-for="Mail" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="text" asp-for="Password" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Şifre Tekrar</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="text" asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Görsel yolu</label>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input type="text" asp-for="ImageUrl" class="form-control" />
                                </div>
                                
                               
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                           Tüm şartları okudum ve kabul ediyorum
                                        </label>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <button class="btn btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                  
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Bir hesaba sahip değil misin? <a href="/Writer/Login/Index/" class="text-primary">Giriş yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
    <script src="/skydas/vendors/js/vendor.bundle.base.js"></script>
    <script src="/skydas/js/off-canvas.js"></script>
    <script src="/skydas/js/hoverable-collapse.js"></script>
    <script src="/skydas/js/template.js"></script>
    <script src="/skydas/js/settings.js"></script>
    <script src="/skydas/js/todolist.js"></script>
</body>

</html>